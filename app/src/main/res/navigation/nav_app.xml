<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_app"
    app:startDestination="@id/loginFragment">

    <action
        android:id="@+id/action_global_to_mainScreenFragment"
        app:destination="@id/mainScreenFragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/nav_app"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="anton.dev.profinet.presentation.login.ui.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_to_createAccountFragment"
            app:destination="@id/createAccountFragment" />
    </fragment>

    <fragment
        android:id="@+id/createAccountFragment"
        android:name="anton.dev.profinet.presentation.create_account.ui.CreateAccountFragment"
        android:label="CreateAccountFragment"
        tools:layout="@layout/fragment_create_account">
    </fragment>

    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="anton.dev.profinet.presentation.main_screen.ui.MainScreenFragment"
        android:label="MainScreenFragment"
        tools:layout="@layout/fragment_main_screen" />
</navigation>