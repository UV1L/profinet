<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <anton.dev.uikit.text.BaseTextView
        android:id="@+id/customer_public_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_3"
        app:layout_constraintTop_toTopOf="parent"
        app:textStyle="PRIMARY"
        tools:text="Антон Васянович" />

    <LinearLayout
        android:id="@+id/customer_public_profile_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@id/customer_public_profile_name"
        app:layout_constraintStart_toStartOf="@id/customer_public_profile_name"
        app:layout_constraintEnd_toEndOf="@id/customer_public_profile_name">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/customer_public_profile_rating_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_star_24"
            app:tint="@color/colorAccent" />

        <anton.dev.uikit.text.BaseTextView
            android:id="@+id/customer_public_profile_rating_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            app:textStyle="PRIMARY2"
            android:paddingTop="1dp"
            android:alpha="0.5"
            tools:text="4.75" />

        <anton.dev.uikit.text.BaseTextView
            android:id="@+id/customer_public_profile_rate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:textStyle="PRIMARY2"
            android:textColor="@color/colorActionText"
            android:text="@string/customer_rate"
            android:layout_marginHorizontal="@dimen/space_3"
            android:paddingTop="1dp" />
    </LinearLayout>

    <anton.dev.uikit.text.TextWithValue
        android:id="@+id/customer_public_profile_qualifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:text="@string/customer_qualifications"
        android:layout_marginHorizontal="@dimen/space_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customer_public_profile_rating"
        android:layout_marginTop="@dimen/space_6"
        app:overallTextStyle="PRIMARY2" />

</androidx.constraintlayout.widget.ConstraintLayout>